{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "lib": ["es6"],
    "types": ["node"]
  },
  "include": ["./src/**/*", "models/model.js"],
  "exclude": ["node_modules", "./test/**/*.test.ts"]
}
